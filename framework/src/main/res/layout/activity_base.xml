<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <RelativeLayout
      android:id="@+id/app_bar_layout"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/color_4fc1e9"
      android:gravity="center_vertical"
      >
    <ImageView
        android:id="@+id/app_bar_back"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/colorAppBarText"
        android:src="@drawable/app_bar_back_indicator"
        android:scaleType="center"
        android:background="@drawable/selector_app_bar"
        />
    <TextView
        android:id="@+id/app_bar_title"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="1"
        android:focusableInTouchMode="true"
        tools:text="标题"
        android:textColor="@color/colorAppBarText"
        android:textSize="@dimen/activity_app_bar_text_size"
        android:gravity="center"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/app_bar_ok"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="?attr/actionBarSize"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        tools:text="确定"
        android:paddingLeft="@dimen/activity_app_bar_padding"
        android:paddingRight="@dimen/activity_app_bar_padding"
        android:textColor="@color/colorAppBarText"
        android:textSize="@dimen/activity_app_bar_ok_text_size"
        android:gravity="center"
        android:background="@drawable/selector_app_bar"
        />
  </RelativeLayout>

</LinearLayout>